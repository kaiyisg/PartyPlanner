<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.csc.iprog.dinnerplanner.android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".MainFoodEditorActivity"
            android:label="@string/title_activity_main_food_editor"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".ChoosingPartyActivity"
            android:label="@string/title_activity_choosing_party"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".PartyEditorActivity"
            android:label="@string/title_activity_party_editor"
            android:theme="@style/MyMaterialTheme"></activity>
    </application>

</manifest>
